  "main": "dist/gwitter.min.js",
  "module": "dist/gwitter.esm.js",
  "types": "dist/gwitter.d.ts",
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "keywords": [
    "issues",
    "github",
    "twitter",
    "blogging"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/SimonAKing/Gwitter"
  },
  "license": "MIT",
  "publishConfig": {
    "access": "public"
